<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <!-- TekkitReference by Hypothermic, www.github.com/hypothermic, admin@hypothermic.nl -->
  <modelVersion>4.0.0</modelVersion>
  <groupId>nl.hypothermic</groupId>
  <artifactId>tcaccess</artifactId>
  <version>1.0.0-RELEASE</version>
  <name>TCAccess</name>
  <build>
      <plugins>
          <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-compiler-plugin</artifactId>
              <configuration>
                  <source>1.7</source>
                  <target>1.7</target>
              </configuration>
          </plugin>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>2.4</version>
            <configuration>
               <descriptorRefs>
                   <descriptorRef>jar-with-dependencies</descriptorRef>
               </descriptorRefs>
            </configuration>
          </plugin>
      </plugins>
  </build>
  <dependencies>
    <!-- Build against Bukkit 1.2.5-R5.0 -->
    <dependency>
      <groupId>bukkit</groupId>
      <artifactId>org.bukkit</artifactId>
      <version>unofficial-1.2.5-R5.0-hypothermic</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/src/main/resources/bukkit-unofficial-1.2.5-R5.0-hypothermic.jar</systemPath>
    </dependency>
  </dependencies>
  <description>Remote management plugin for your Tekkit Classic server. Works with Bukkit API 1.2.5</description>
  <url>www.github.com/hypothermic/Access</url>
</project>